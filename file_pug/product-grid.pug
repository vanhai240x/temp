doctype html
head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css' integrity='sha384-PDle/QlgIONtM1aqA2Qemk5gPOE7wFq8+Em+G/hmo5Iq0CCmYZLv3fVRDJ4MMwEA' crossorigin='anonymous')
    // Font Awesome CDN
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/", crossorigin="anonymous")
    // Link CSS
    link(rel="stylesheet", href="../build/homepage.css")
    title Trang sản phẩm
body
    // Minxin PROD__DETAIL
    mixin prod__detail(link)
        .wrap-content
            img(src=link)
            .price 1.550.000 Đ
            .name Máy khoan Black Decker
            .vote
                .star
                    -var n = 0
                        while n < 4
                            i.fas.fa-star
                            -n++
                    i.far.fa-star
                .text (12 Đánh giá)
                .clearfix
            .button
                button MUA NGAY
                button XEM CHI TIẾT 

    include ../file_pug/sub_page/_header.pug
    .container
        .breadcrumb
            li.breadcrumb-item
                a(href="") Trang chủ
            i.fas.fa-caret-right
            li.breadcrumb-item.active Danh mục sản phẩm
        .content
            .col-3.content__left
                include ../file_pug/sub_page/_menu-product.pug
            .col-9.content__right
                .content__right__header
                    include ../file_pug/sub_page/_header-product.pug
                .content__right__content
                    mixin prod__detail2(link1,link2,link3)
                        .row
                            each link in [link1,link2,link3]
                                .col-4.prod__detail
                                    +prod__detail(link)
                    +prod__detail2('../build/images/3.jpg','../build/images/4.jpg','../build/images/5.jpg')
                    +prod__detail2('../build/images/6.jpg','../build/images/7.jpg','../build/images/8.jpg')
                    +prod__detail2('../build/images/10.jpg','../build/images/9.jpg','../build/images/6.jpg')
                    +prod__detail2('../build/images/11.jpg','../build/images/5.jpg','../build/images/7.jpg')
                    +prod__detail2('../build/images/36.jpg','../build/images/35.jpg','../build/images/4.jpg')
                    +prod__detail2('../build/images/9.jpg','../build/images/5.jpg','../build/images/3.jpg')
                .content__right__footer
                    include ../file_pug/sub_page/_footer-product.pug 
        .clearfix
    include ../file_pug/sub_page/_footer.pug
    
    // Optional JavaScript
    // jQuery first, then Popper.js, then Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js' integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49' crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy' crossorigin='anonymous')

